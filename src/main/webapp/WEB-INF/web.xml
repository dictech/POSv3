<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>CreateAttendantCtrl</servlet-name>
  	<display-name>CreateAttendantCtrl</display-name>
  	<description>Create's an account for a staff</description>
  	<servlet-class>com.pos.account.controller.CreateAttendantCtrl</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginCtrl</servlet-name>
  	<display-name>LoginCtrl</display-name>
  	<description>logs in an employee</description>
  	<servlet-class>com.pos.account.controller.LoginCtrl</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CreateAttendantCtrl</servlet-name>
  	<url-pattern>/RegisterStaff</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginCtrl</servlet-name>
  	<url-pattern>/EmployeeLogin</url-pattern>
  </servlet-mapping>
</web-app>
